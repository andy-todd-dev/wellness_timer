{
  "name": "Node.js",
  "build": {
    "dockerfile": "Dockerfile",
    "args": { "VARIANT": "22-bullseye" }
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "seunlanlege.action-buttons"
      ]
    },
  },

  "remoteUser": "node",
  "remoteEnv": {
    "VITE_MT_EDIT_BUTTONS_ENABLED": "true"
  },
  "features": {
    "git": "os-provided",
    "github-cli": "latest"
  }
}
